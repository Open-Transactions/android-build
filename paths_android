#!/bin/bash

export PATH="${ANDROID_STANDALONE_TOOLCHAIN}/bin:${PATH}"
export CC="${ANDROID_EABI_OT}-gcc --sysroot ${SYSROOT}"
export CXX="${ANDROID_EABI_OT}-g++ --sysroot ${SYSROOT}"
export CXXSTL_INCLUDE="${ANDROID_STANDALONE_TOOLCHAIN}/include/c++/${ANDROID_GCC_VERSION_OT}/"
export CXXSTL_LIB="${ANDROID_STANDALONE_TOOLCHAIN}/${ANDROID_EABI_OT}/lib"
